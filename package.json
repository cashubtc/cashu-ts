{
	"name": "@cashu/cashu-ts",
	"version": "2.5.2",
	"description": "cashu library for communicating with a cashu mint",
	"type": "module",
	"main": "lib/cashu-ts.cjs.js",
	"module": "lib/cashu-ts.es.js",
	"types": "lib/types/index.d.ts",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/cashubtc/cashu-ts"
	},
	"bugs": {
		"url": "https://github.com/cashubtc/cashu-ts/issues"
	},
	"scripts": {
		"compile": "vite build",
		"compile:standalone": "BUILD_FORMAT=iife vite build",
		"test": "vitest run --coverage --exclude ./test/integration.test.ts --exclude ./test/auth.test.ts",
		"test-integration": "vitest run ./test/integration.test.ts --coverage",
		"dev": "tsc --watch",
		"lint": "eslint --ext .js,.ts . --fix",
		"format": "prettier --write .",
		"check-format": "prettier --check .",
		"typedoc": "typedoc src/index.ts",
		"api:check": "npm run compile && api-extractor run",
		"api:update": "npm run compile && api-extractor run --local"
	},
	"exports": {
		".": {
			"require": "./lib/cashu-ts.cjs.js",
			"import": "./lib/cashu-ts.es.js",
			"types": "./lib/types/index.d.ts"
		},
		"./crypto/client": {
			"require": "./lib/crypto/client.cjs.js",
			"import": "./lib/crypto/client.es.js",
			"types": "./lib/types/crypto/client/index.d.ts"
		},
		"./crypto/common": {
			"require": "./lib/crypto/common.cjs.js",
			"import": "./lib/crypto/common.es.js",
			"types": "./lib/types/crypto/common/index.d.ts"
		},
		"./crypto/mint": {
			"require": "./lib/crypto/mint.cjs.js",
			"import": "./lib/crypto/mint.es.js",
			"types": "./lib/types/crypto/mint/index.d.ts"
		},
		"./crypto/util": {
			"require": "./lib/crypto/util.cjs.js",
			"import": "./lib/crypto/util.es.js",
			"types": "./lib/types/crypto/util/utils.d.ts"
		},
		"./crypto/client/NUT09": {
			"require": "./lib/crypto/client/NUT09.cjs.js",
			"import": "./lib/crypto/client/NUT09.es.js",
			"types": "./lib/types/crypto/client/NUT09.d.ts"
		},
		"./crypto/client/NUT11": {
			"require": "./lib/crypto/client/NUT11.cjs.js",
			"import": "./lib/crypto/client/NUT11.es.js",
			"types": "./lib/types/crypto/client/NUT11.d.ts"
		},
		"./crypto/client/NUT12": {
			"require": "./lib/crypto/client/NUT12.cjs.js",
			"import": "./lib/crypto/client/NUT12.es.js",
			"types": "./lib/types/crypto/client/NUT12.d.ts"
		},
		"./crypto/client/NUT20": {
			"require": "./lib/crypto/client/NUT20.cjs.js",
			"import": "./lib/crypto/client/NUT20.es.js",
			"types": "./lib/types/crypto/client/NUT20.d.ts"
		},
		"./crypto/common/NUT11": {
			"require": "./lib/crypto/common/NUT11.cjs.js",
			"import": "./lib/crypto/common/NUT11.es.js",
			"types": "./lib/types/crypto/common/NUT11.d.ts"
		},
		"./crypto/mint/NUT11": {
			"require": "./lib/crypto/mint/NUT11.cjs.js",
			"import": "./lib/crypto/mint/NUT11.es.js",
			"types": "./lib/types/crypto/mint/NUT11.d.ts"
		},
		"./crypto/mint/NUT12": {
			"require": "./lib/crypto/mint/NUT12.cjs.js",
			"import": "./lib/crypto/mint/NUT12.es.js",
			"types": "./lib/types/crypto/mint/NUT12.d.ts"
		}
	},
	"keywords": [
		"cashu"
	],
	"author": "gandlaf21",
	"license": "MIT",
	"devDependencies": {
		"@microsoft/api-extractor": "^7.52.4",
		"@types/node-fetch": "^2.6.4",
		"@types/ws": "^8.5.10",
		"@typescript-eslint/eslint-plugin": "^5.59.2",
		"@typescript-eslint/parser": "^5.59.2",
		"@vitest/browser": "^2.1.5",
		"@vitest/coverage-v8": "^2.1.5",
		"eslint": "^8.39.0",
		"eslint-config-standard-with-typescript": "^34.0.1",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-n": "^15.7.0",
		"eslint-plugin-promise": "^6.1.1",
		"mock-socket": "^9.3.1",
		"msw": "^2.6.6",
		"node-fetch": "^2.7.0",
		"playwright": "^1.49.0",
		"prettier": "^2.8.8",
		"ts-node": "^10.9.1",
		"typedoc": "^0.27.5",
		"typescript": "^5.7.2",
		"vite": "^5.4.11",
		"vite-plugin-dts": "^4.4.0",
		"vitest": "^2.1.5",
		"ws": "^8.16.0"
	},
	"dependencies": {
		"@noble/curves": "^1.6.0",
		"@noble/hashes": "^1.5.0",
		"@scure/bip32": "^1.5.0",
		"buffer": "^6.0.3"
	}
}
